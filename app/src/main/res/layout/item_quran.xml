<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/sura_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/total_ayat_inSura"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="اسم السوره"
        android:textSize="20sp"
        android:gravity="center"
        android:padding="10dp"
        />
    <TextView
        android:id="@+id/total_ayat_inSura"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/sura_name"
        android:text="عدد الايات"
        android:textSize="20sp"
        android:gravity="center"
        android:padding="10dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>